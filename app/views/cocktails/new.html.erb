<div class="container">
  
  <div class="new-cocktail-container">
    <h1>Create a new cocktail</h1>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, label: "Name your drink: ", placeholder: "Ron pintado.." %>
      <%= f.submit class: 'btnbanner' %>
      <%= link_to '<button class="btn btn-secondary">Back to Cocktails</button>'.html_safe, '/' %>
    <% end %>
  </div>

</div>

