<div class="wrapper">


  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
    <div class="headers">
      <h1>Cocktail Lab</h1>
      <p>Change your life and drink as much as you can!</p>
      <p><%= link_to "Add Cocktail", new_cocktail_path %></p>
    </div>
  </div>

  <div class="container">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <div class="card-info">
          <img src="" alt="">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    <% end %>
  </div>

</div>