<div class="container">

  <nav class="navbar sticky-top navbar-light bg-light">
    <a class="navbar-brand" href="#"><i class="fas fa-cocktail fa-lg"></i></a>
    <h6><a class="navbar-brand" href="#">Contact</a></h6>
  </nav>

  <div class="img-title">
    <h1 class="header" ><%= @cocktail.name %></h1>
    <img class="background-img" src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1349&q=80" />
  </div>

  <div class="card-trip-infos">
    <div class="ingredients-title">
      <h1>Ingredients</h1>
    </div>

    <% @cocktail.doses.each do |dose|  %>
      <div class="info-container">
        <div class="ingredients">
          <h6>Licour: <%= dose.ingredient.name %>  -   Quantity:  <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete,
          data: { confirm: "Are you sure?"} do %>
            -  <i class="fas fa-trash-alt fa-sm"></i></h6>
          <% end %></h5>
        </div>
      </div>
    <% end %>

    <div class="btn-container">
      <%= link_to '<button class="btnbanner">Add ingredient</button>'.html_safe, new_cocktail_dose_path(@cocktail) %>
      <%= link_to '<button class="btn btn-secondary">Back to Cocktails</button>'.html_safe, '/' %>
    </div>
  </div>



      <% @cocktail.reviews.each do |dose|  %>
      <div class="info-container">
        <div class="ingredients">
          <h6><%= dose.reviews.content %>  -  <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete,
          data: { confirm: "Are you sure?"} do %>
            -  <i class="fas fa-trash-alt fa-sm"></i></h6>
          <% end %></h5>
        </div>
      </div>
    <% end %>

</div>
