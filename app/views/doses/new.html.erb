<div class="container">

  <nav class="navbar sticky-top navbar-light bg-light">
    <a class="navbar-brand" href="#"><i class="fas fa-cocktail fa-lg"></i></a>
    <h6><a class="navbar-brand" href="#">Contact</a></h6>
  </nav>

  <div class="img-title">
    <h1 class="header">Select your ingredients!</h1>
    <img class="background-img" src="https://images.unsplash.com/photo-1468072114808-903e572b8ead?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1266&q=80" />
  </div>

  <%= simple_form_for [ @cocktail, @dose ] do |f| %>
    <%= f.association :ingredient, label: "Add a new ingredient", placeholder: "Seco Herrerano..." %>
    <%= f.input :description, label: "How much of it?..", placeholder: "1 Gal..." %>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to '<button class="btn btn-secondary">Back to Cocktails</button>'.html_safe, '/' %>
  <% end %>

</div>


